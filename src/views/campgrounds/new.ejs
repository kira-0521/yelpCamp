<% layout('layouts/boilerplate') -%>
<div class="row">
  <h1 class="text-center">キャンプ場の新規登録</h1>
  <div class="offset-3 col-6">
    <form action="/campgrounds" method="POST" novalidate class="validated-form">
      <div class="mb-3">
        <label for="title" class="form-label">タイトル</label>
        <input
          required
          type="text"
          name="campground[title]"
          id="title"
          class="form-control"
        />
        <div class="valid-feedback">OK!</div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">場所</label>
        <input
          required
          type="text"
          name="campground[location]"
          id="location"
          class="form-control"
        />
        <div class="valid-feedback">OK!</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">画像URL</label>
        <input
          required
          type="text"
          name="campground[image]"
          id="image"
          class="form-control"
        />
        <div class="valid-feedback">OK!</div>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">価格</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="price-label">@</span>
          <input
            required
            type="number"
            id="price"
            class="form-control"
            placeholder="0"
            aria-label="Price"
            aria-describedby="price-label"
            name="campground[price]"
          />
          <div class="valid-feedback">OK!</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">説明</label>
        <textarea
          required
          type="text"
          name="campground[description]"
          id="description"
          class="form-control"
        ></textarea>
        <div class="valid-feedback">OK!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">登録</button>
      </div>
    </form>
  </div>
</div>
